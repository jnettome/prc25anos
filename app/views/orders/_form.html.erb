<%= form_for(@order, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @order.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@order.errors.count, "erros") %>:</h4>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Nome", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, "Email", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>

  <%= f.hidden_field :pagseguro_code %>

  <fieldset>
    <legend>Dados de Pagamento</legend>
      <div class="form-group">
        <label class="col-sm-3 control-label">Nome</label>
        <div class="col-sm-9">
          <input type="text" data-iugu="first_name" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label">Sobrenome</label>
        <div class="col-sm-9">
          <input type="text" data-iugu="last_name" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label">Numéro do Cartão</label>
        <div class="col-sm-9">
          <input type="text" data-iugu="number" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label">Validade</label>
        <div class="col-sm-9">
          <div class="row">
            <div class="col-xs-6">
              <input type="text" data-iugu="expiration" class="form-control" placeholder="MM/AA">
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label">CVV</label>
        <div class="col-sm-3">
          <input type="text" data-iugu="verification_value" class="form-control">
        </div>
      </div>
    </fieldset>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit "Pagar agora", :class => "btn btn-success" %>
    </div>
  </div>
<% end %>